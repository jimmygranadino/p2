    <h2>Watchlist for <strong><%= currentUser.name %></strong>:</h2>
    <div class="row">
        <% cities.forEach(function(city) { %>
        <div class="col-4">
            <div class="card text-white bg-primary mb-3" style="max-width: 20rem;">
                <div class="card-header"><h3><%= city.name %></h3></div>
                <div class="card-body">
                <h5 class="card-title">1 Euro = </h5>
                <form method="post" action="/auth/watchlist/<%= city.id %>/remove" class="inline">
                    <input type="hidden">
                    <button type="submit" class="btn btn-secondary">
                      Remove from Watchlist
                    </button>
                </form>
                </div>
            </div>
        </div>
        <% }) %>
    </div>
<br />


<form action="/auth/register" method="POST">
    <div class="form-group row">
        <label for="authEmail">Email</label>
        <input id="authEmail" class="form-control" type="email" name="email" placeholder="Enter email">
    </div>
    <div class="form-group row">
        <label for="authName">Name</label>
        <input id="authName" class="form-control" type="text" name="name" placeholder="Enter full name">
    </div>
    <div class="form-group row">
        <label for="authPassword">Password</label>
        <input id="authPassword" class="form-control" type="password" name="password" placeholder="Password">
    </div>
    <input class="btn btn-primary" type="submit">
</form>
<br />